<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<UseWindowsForms>true</UseWindowsForms>
		<ImplicitUsings>enable</ImplicitUsings>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Title>TerminalMatrix</Title>
		<Company>Anders Hesselbom</Company>
		<Version>1.3</Version>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
		<AssemblyVersion>1.3</AssemblyVersion>
		<FileVersion>1.3</FileVersion>
		<Description>A pixel based terminal matrix.</Description>
		<PackageIcon>terminal.png</PackageIcon>
		<PackageReleaseNotes>The cursor color is corrected, layer order can be changed, text area can be limited.</PackageReleaseNotes>
	</PropertyGroup>

	<ItemGroup>
	  <None Include="..\terminal.png">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

</Project>
